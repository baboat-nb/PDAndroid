<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:background="#EF5350"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="บันทึกค่า"
        android:textStyle="bold"
        android:padding="50dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnDiaVolIn1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#fafafa"
        fancy:fb_focusColor="#FFCDD2"
        fancy:fb_text="น้ำเข้า"
        fancy:fb_textColor="@color/colorPrimary" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnDiaVolOut1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#fafafa"
        fancy:fb_focusColor="#FFCDD2"
        fancy:fb_text="น้ำออก"
        fancy:fb_textColor="@color/colorPrimary" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnDiaVolPee1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#fafafa"
        fancy:fb_focusColor="#FFCDD2"
        fancy:fb_text="ปัสสาวะ"
        fancy:fb_textColor="@color/colorPrimary" />

</LinearLayout>