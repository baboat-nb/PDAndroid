<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_border"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="บันทึก"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:background="@drawable/food_border"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bbbbbb"
        android:paddingLeft="4dp"
        android:text="เลือกอาหาร"/>

    <LinearLayout
        android:id="@+id/FoodChooseList"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/food_border">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginLeft="17dp"
            android:text="เลือกรายการ"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></FrameLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/expand_button"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bbbbbb"
        android:paddingLeft="4dp"
        android:text="บันทึก"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/food_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/FoodReceiveName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:text="ชื่ออาหาร"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></FrameLayout>

        <TextView
            android:id="@+id/FoodReceiveUnit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/FoodReceiveClass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textSize="12sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/food_border"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:text="ระบุจำนวน"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></FrameLayout>


        <EditText
            android:id="@+id/FoodEditNumber"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:maxLength="2"
            android:textSize="12sp"/>



    </LinearLayout>

    <Button
        android:id="@+id/FoodSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/login__button_border"
        android:gravity="center"
        android:text="บันทึก"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white" />

</LinearLayout>